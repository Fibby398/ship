<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    >

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ship"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ship">
    </ImageView>

    </FrameLayout>


    <LinearLayout
        android:id="@+id/material_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_gravity="end"
        android:layout_margin="8dp"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/editor_clear"
            android:layout_width="@dimen/material"
            android:layout_height="@dimen/material"
            android:layout_margin="8dp"
            android:src="@drawable/ic_baseline_clear_24">

        </ImageView>
        <ImageView
            android:id="@+id/editor_brick"
            android:layout_width="@dimen/material"
            android:layout_height="@dimen/material"
            android:layout_margin="8dp"
            android:src="@drawable/brick">

        </ImageView>
        <ImageView
            android:id="@+id/editor_concrete"
            android:layout_width="@dimen/material"
            android:layout_height="@dimen/material"
            android:layout_margin="8dp"
            android:src="@drawable/concrete">

        </ImageView>
        <ImageView
            android:id="@+id/editor_grass"
            android:layout_width="@dimen/material"
            android:layout_height="@dimen/material"
            android:layout_margin="8dp"
            android:src="@drawable/grass">

        </ImageView>

    </LinearLayout>
  </FrameLayout>